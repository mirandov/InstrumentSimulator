= simple_form_for @company, html: { class: 'col-md-6 col-md-offset-3 text-center', role: 'form1' } do |f|
  .well
    .row
      .col-md-4
        .form-group
          = f.input :name
      .col-md-4
        .form-group
          = f.input :full_name
      .col-md-4
        .form-group
          = f.input :inn
    .row
      .col-md-2
        .form-group
      .col-md-4
        .form-group
          = f.input :orgn
      .col-md-4
        .form-group
          = f.input :kind_of_action, collection: ["Обрабатывающее","Производственное"]
          -# = f.input :kind_of_action
    .row
      .col-md-4
        .form-group
      .col-md-4
        .form-group
          = f.input :location

  %br/

  .form-actions
    = link_to "Назад", Company,  class: 'btn btn-primary'
    = f.submit 'Сохранить', class: 'btn btn-primary'
