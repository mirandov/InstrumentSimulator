.page-header.text-center
  %h1= t('headers.register_signals.index')
= link_to new_register_signal_path, class: 'btn btn-success' do
  = fa_icon :plus
  = "Создать регистратор сигналов"

%br
%br

%table.table.table-hover
  %thead
    %tr
    %th= RegisterSignal.human_attribute_name :number_register
    %th= RegisterSignal.human_attribute_name :control_tool
    %th
    %th
    %th

  %tbody
    - @register_signals.each do |register_signal|
      %tr
        %td= register_signal.number_register
        %td= register_signal.control_tool.id
        %td
          = link_to register_signal, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_register_signal_path(register_signal), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to register_signal, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
