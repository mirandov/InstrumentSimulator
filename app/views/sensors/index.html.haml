.page-header.text-center
  %h1= t('headers.sensors.index')
= link_to new_sensor_path, class: 'btn btn-success' do
  = fa_icon :plus
  = "Создать сенсор"

%br
%br

%table.table.table-hover
  %thead
    %tr
    %th= Sensor.human_attribute_name :sensor_presence
    %th= Sensor.human_attribute_name :sensor_lv1
    %th= Sensor.human_attribute_name :sensor_lv2
    %th= Sensor.human_attribute_name :sensor_tivl
    %th= Sensor.human_attribute_name :control_tool
    %th
    %th
    %th

  %tbody
    - @sensors.each do |sensor|
      %tr
        %td= sensor.sensor_presence
        %td= sensor.sensor_lv1
        %td= sensor.sensor_lv2
        %td= sensor.sensor_tivl
        %td= sensor.control_tool.id

        %td
          = link_to sensor, class: 'btn btn-success' do
            = fa_icon :eye
        %td
          = link_to edit_sensor_path(sensor), class: 'btn btn-info' do
            = fa_icon :edit
        %td
          = link_to sensor, :method => :delete, :data => { :confirm => t('helpers.sure') }, class: 'btn btn-danger' do
            = fa_icon :times
