= simple_form_for @sensor, html: { class: 'col-md-6 col-md-offset-3 text-center', role: 'form1' } do |f|

  .row.col-md-offset-3
    .col-md-8
      .form-group
        = f.input :sensor_presence
    .col-md-8
      .form-group
        = f.input :sensor_lv1
  .row.col-md-offset-3
    .col-md-8
      .form-group
        = f.input :sensor_lv2
    .col-md-8
      .form-group
        = f.input :sensor_tivl

  .row.col-md-offset-3
    .col-md-8
      .form-group
        = f.association :control_tool, collection: ControlTool.all.map{|x| [x.id, x.id]}
        -# = f.input :kind_of_action


  %br/

  .form-actions
    = link_to "Назад", Sensor,  class: 'btn btn-primary'
    = f.submit 'Сохранить', class: 'btn btn-primary'
